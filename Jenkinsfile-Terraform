pipeline {

    parameters {
        booleanParam(name: 'autoApprove', defaultValue: false, description: 'Automatically run 	apply after generating plan?')
    } 
    environment {
        AWS_ACCESS_KEY_ID     = credentials('AWS_ACCESS_KEY_ID')
        AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_ACCESS_KEY')
        GITHUB_CRED = credentials('GITHUB_CRED')
    }
   agent any
   
    stages {
        stage('checkout') {
            steps {
                 script{
                        dir("Terraform-AWS")
                        {
                        checkout scmGit(branches: [[name: '*/Release']], extensions: [], userRemoteConfigs: [[credentialsId: 'GITHUB_CRED', url: 'https://github.com/prakash-t91/Terraform-AWS.git']])
                     withCredentials([gitUsernamePassword(credentialsId: 'GITHUB_CRED', gitToolName: 'Git')]) { 
		    sh '''
                    git config user.name "prakash-t91"
		    git config user.email "jyoti.prakasht91@gmail.com"  

		   ''' 
          	     }
                      
                   }
                 }
              }
            }

        stage('Plan') {
            steps {
                sh 'pwd;cd Terraform-AWS/ ; terraform init'
                sh "pwd;cd Terraform-AWS/ ; terraform plan -out tfplan"
                sh 'pwd;cd Terraform-AWS/ ; terraform show -no-color tfplan > tfplan.txt'
            }
        }
        stage('Approval') {
           when {
               not {
                   equals expected: true, actual: params.autoApprove
               }
           }

           steps {
               script {
                    def plan = readFile 'Terraform-AWS/tfplan.txt'
                    input message: "Do you want to apply the plan?",
                    parameters: [text(name: 'Plan', description: 'Please review the plan', defaultValue: plan)]
               }
           }
       }
        stage('Apply') {
            steps {
                sh "pwd;cd Terraform-AWS/ ; terraform apply -input=false tfplan"
            }
        }
    }

  }
